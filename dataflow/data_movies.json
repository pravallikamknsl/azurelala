{
	"name": "data_movies",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "movies_blob",
						"type": "DatasetReference"
					},
					"name": "moviesrc"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "cleaningmovies"
				}
			],
			"scriptLines": [
				"source(output(",
				"          movieId as string,",
				"          title as string,",
				"          genres as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> moviesrc",
				"moviesrc derive(titlenew = toStirng(left(title,length(title)-6))) ~> cleaningmovies"
			]
		}
	}
}